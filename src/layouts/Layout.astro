---
interface Props {
  title?: string;
}

const { title = 'The First Spark' } = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title} | The First Spark</title>
  <style is:global>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    html {
      scroll-behavior: smooth;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: linear-gradient(180deg, #0f0f1e 0%, #1a1a2e 100%);
      color: #fff;
      line-height: 1.6;
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    button {
      font-family: inherit;
    }

    /* Scrollbar styling */
    ::-webkit-scrollbar {
      width: 8px;
    }

    ::-webkit-scrollbar-track {
      background: rgba(255, 200, 87, 0.05);
    }

    ::-webkit-scrollbar-thumb {
      background: rgba(255, 200, 87, 0.3);
      border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: rgba(255, 200, 87, 0.5);
    }
  </style>
</head>
<body>
  <nav class="navbar">
    <style>
      .navbar {
        background: rgba(15, 15, 30, 0.95);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 200, 87, 0.2);
        padding: 15px 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: sticky;
        top: 0;
        z-index: 1000;
      }
      .navbar-logo {
        font-size: 20px;
        font-weight: 700;
        background: linear-gradient(135deg, #ffc857 0%, #ffb744 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      .navbar-links {
        display: flex;
        gap: 30px;
        list-style: none;
      }
      .navbar-links a {
        color: rgba(255, 255, 255, 0.8);
        transition: color 0.3s ease;
        font-size: 14px;
      }
      .navbar-links a:hover {
        color: #ffc857;
      }
      .navbar-cta {
        background: #ffc857;
        color: #1a1a2e;
        padding: 8px 16px;
        border-radius: 4px;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        border: none;
        transition: all 0.3s ease;
      }
      .navbar-cta:hover {
        background: #ffb744;
        transform: translateY(-2px);
      }
    </style>
    
    <div class="navbar-logo">âœ¨ The First Spark</div>
    <ul class="navbar-links">
      <li><a href="/">Home</a></li>
      <li><a href="/pricing">Pricing</a></li>
      <li><a href="/about">About</a></li>
      <li><a href="/auth">Dashboard</a></li>
    </ul>
  </nav>

  <main>
    <slot />
  </main>

  <footer style="background: rgba(255, 200, 87, 0.05); border-top: 1px solid rgba(255, 200, 87, 0.2); padding: 40px 20px; text-align: center; color: rgba(255, 255, 255, 0.6); font-size: 14px; margin-top: 60px;">
    <p>&copy; 2025 The First Spark. All rights reserved. Built with intention and code.</p>
  </footer>
</body>
</html>
